<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<BorderPane fx:controller="com.abhi.contactsApplication.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar>
            <Menu text="Contacts">
                <MenuItem text="New"/>
                <MenuItem text="Exit"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="contactsTable">
            <columns>
                <TableColumn text="First Name">

<!--                    Cell Value factories to populate cells in the respective columns. Property Value factories to
                        Lookup ad work with given property values from strings. Note the property names correspond with
                        the field names in the Contact class.
                        All of the above is done in order to be able to work with data binding in the cells of the
                        Contacts table-->

                    <cellValueFactory>
                        <PropertyValueFactory property="firstName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Last Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Phone Number">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Notes">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
</BorderPane>